<link rel="stylesheet" href="/css/store/store-registration.css">

<div class="form-container">
  <h2>  Registration Form</h2>
    <% if(error.length>0){ %>
      <div class="errorContainer">
        <% error.forEach(element => { %>
          <p><%= element.msg %></p>
        <% }); %>
        <div class="crossError"><i class="fa-solid fa-xmark"></i></div>
      </div>
    <% } %>
  <form id="userForm" action="/registration" method="post" enctype="multipart/form-data">
    <div>
      <label for="customerusername">User Name <span class="required">*</span></label>
      <input type="text" id="customerusername" name="customerusername" required>
    </div>

     <div>
      <label for="customerprofilephoto">Profile Photo <span class="required">*</span></label>
      <input type="file" id="customerprofilephoto" name="customerprofilephoto" accept="image/*" required>
    </div>

    <div>
      <label for="customeremail">Email Address <span class="required">*</span></label>
      <input type="email" id="customeremail" name="customeremail" required>
    </div>
    <div>
      <label for="whatsapp">WhatsApp Number <span class="required">*</span></label>
      <div class="phonenumber">
        <select id="selectcountryisd" name="countryisd">
          <option value="+974" selected>+974</option>
        </select>
        <input type="number" id="whatsapp" name="customerwhatsapp" placeholder="501234567" required>
      </div>
    </div>

    <div>
      <label for="customeraddressunitno"> Unit No. <span class="required">*</span></label>
      <input type="number" id="customeraddressunitno" name="customerunitno" required>
    </div>
    <div>
      <label for="customeraddressbuildingno"> Building No. <span class="required">*</span></label>
      <input type="number" id="customeraddressbuildingno" name="customerbuildingno" required>
    </div>
    <div>
      <label for="customeraddressstreetno"> Street No. <span class="required">*</span></label>
      <input type="number" id="customeraddressstreetno" name="customerstreetno" required>
    </div>
    <div>
      <label for="customeraddresszoneno"> Zone No. <span class="required">*</span></label>
      <input type="number" id="customeraddresszoneno" name="customerzoneno" required>
    </div>
    <div>
      <label for="customercountry">Country <span class="required">*</span></label>
      <select id="customercountry" name="customercountry" required>
        <option value="Qatar" selected>Qatar</option>
      </select>
    </div>
    <div class="dropdown-subcategory">
      <label for="customercity">City <span class="required">*</span></label>
      <input id="customercity" type="text" name="customercity" required>
      <div class="dropdown-list" id="dropdown"></div>
    </div>
    <div>
      <div class="passContainer">
      <label for="customerpassword">Login Password <span class="required">*</span></label>
      <input type="password" id="customerpassword" name="customerpassword" required>
      <i class="fa-solid fa-eye eyespass"></i> 
    </div>
    <p class="passCondition">Password must contain mininum 8 chars, at least one uppercase, at least one special character and one Number</p>
    </div>
    
    <div class="checkbox-container">
      <input type="checkbox" id="terms" required>
      <label for="terms" style="font-weight:normal;">
        By Clicking It You are Agree to Our All Terms and Condition
      </label>
    </div>

    <button class="submitBTN" type="submit">Register</button>
  </form>
</div>



<script src="/js/customerjs/customer-registration.js"> </script>